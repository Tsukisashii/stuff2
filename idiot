setfpscap(6)

-- Unlock world
local args = { "UnlockWorld", "Seven Seas" }
game:GetService("ReplicatedStorage")
    :WaitForChild("Shared")
    :WaitForChild("Framework")
    :WaitForChild("Network")
    :WaitForChild("Remote")
    :WaitForChild("RemoteEvent")
    :FireServer(unpack(args))

-- Teleport player
local player = game:GetService("Players").LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
humanoidRootPart.CFrame = CFrame.new(-13945.51, 14.02, -20254.77)

-- Load external script
loadstring(game:HttpGet("https://raw.githubusercontent.com/IdiotHub/Scripts/refs/heads/main/BGSI/main.lua"))()

-- Remote reference
local remote = game:GetService("ReplicatedStorage")
    :WaitForChild("Shared")
    :WaitForChild("Framework")
    :WaitForChild("Network")
    :WaitForChild("Remote")
    :WaitForChild("RemoteEvent")

-- âœ… Infinite hatching (your exact untouched line)
task.spawn(function()
    while true do
        local args = {
            "HatchEgg",
            "Atlantis Egg",
            15 
        }
        game:GetService("ReplicatedStorage")
            :WaitForChild("Shared")
            :WaitForChild("Framework")
            :WaitForChild("Network")
            :WaitForChild("Remote")
            :WaitForChild("RemoteEvent")
            :FireServer(unpack(args))

        task.wait(0.1) -- adjust hatch speed
    end
end)

-- Auto equip loop
task.spawn(function()
    while task.wait(10) do
        pcall(function()
            local args = { "EquipBestPets" }
            remote:FireServer(unpack(args))
        end)
    end
end)

-- Auto sell loop
task.spawn(function()
    while true do
        pcall(function()
            local args = { "SellAllFish" }
            remote:FireServer(unpack(args))
        end)
        task.wait(5) -- every 5 seconds
    end
end)
