setfpscap(6)

-- Unlock world
local args = {
    "UnlockWorld",
    "Seven Seas"
}
game:GetService("ReplicatedStorage")
    .Shared.Framework.Network.Remote.RemoteEvent:FireServer(unpack(args))

-- Load external script
loadstring(game:HttpGet("https://raw.githubusercontent.com/IdiotHub/Scripts/refs/heads/main/BGSI/main.lua"))()

-- Teleport player
local player = game:GetService("Players").LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
humanoidRootPart.CFrame = CFrame.new(-13945.51, 14.02, -20254.77)

local remote = game:GetService("ReplicatedStorage").Shared.Framework.Network.Remote.RemoteEvent
local vim = game:GetService("VirtualInputManager")

-- Auto equip loop
task.spawn(function()
    while true do
        pcall(function()
            remote:FireServer("EquipBestPets")
        end)
        task.wait(10)
    end
end)

-- Continuous E spam loop (runs on its own heartbeat)
task.spawn(function()
    game:GetService("RunService").Heartbeat:Connect(function()
        pcall(function()
            vim:SendKeyEvent(true, Enum.KeyCode.E, false, game)
            vim:SendKeyEvent(false, Enum.KeyCode.E, false, game)
        end)
    end)
end)

-- Auto sell loop
task.spawn(function()
    while true do
        pcall(function()
            remote:FireServer("SellAllFish")
        end)
        task.wait(5)
    end
end)
