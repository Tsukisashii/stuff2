setfpscap(6)

-- Unlock world
local args = {
    "UnlockWorld",
    "Seven Seas"
}
game:GetService("ReplicatedStorage")
    .Shared.Framework.Network.Remote.RemoteEvent:FireServer(unpack(args))

-- Teleport player
local player = game:GetService("Players").LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
humanoidRootPart.CFrame = CFrame.new(-13945.51, 14.02, -20254.77)

-- Load external script
loadstring(game:HttpGet("https://raw.githubusercontent.com/IdiotHub/Scripts/refs/heads/main/BGSI/main.lua"))()

local remote = game:GetService("ReplicatedStorage").Shared.Framework.Network.Remote.RemoteEvent
local RunService = game:GetService("RunService")

-- Auto equip loop
task.spawn(function()
    while task.wait(10) do
        pcall(function()
            remote:FireServer("EquipBestPets")
        end)
    end
end)

-- Auto sell loop using Heartbeat (runs independently of hatch spam)
task.spawn(function()
    local lastSell = 0
    RunService.Heartbeat:Connect(function()
        if tick() - lastSell >= 5 then -- every 5 seconds
            task.spawn(function()
                pcall(function()
                    remote:FireServer("SellAllFish")
                end)
            end)
            lastSell = tick()
        end
    end)
end)
