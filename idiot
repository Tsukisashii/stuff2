setfpscap(6)

-- Unlock world
local args = {
    "UnlockWorld",
    "Seven Seas"
}
game:GetService("ReplicatedStorage")
    .Shared.Framework.Network.Remote.RemoteEvent:FireServer(unpack(args))

-- Teleport player
local player = game:GetService("Players").LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
humanoidRootPart.CFrame = CFrame.new(-13945.51, 14.02, -20254.77)

-- Load external script
loadstring(game:HttpGet("https://raw.githubusercontent.com/IdiotHub/Scripts/refs/heads/main/BGSI/main.lua"))()

local remote = game:GetService("ReplicatedStorage").Shared.Framework.Network.Remote.RemoteEvent

-- Auto equip loop
task.spawn(function()
    while task.wait(10) do
        pcall(function()
            remote:FireServer("EquipBestPets")
        end)
    end
end)

-- Normal auto sell loop
task.spawn(function()
    while task.wait(5) do
        pcall(function()
            remote:FireServer("SellAllFish")
        end)
    end
end)

-- ðŸ”¥ Hook into HatchEgg remote to sell IMMEDIATELY after hatching
local oldFireServer
oldFireServer = hookmetamethod(remote, "__namecall", function(self, ...)
    local args = {...}
    if getnamecallmethod() == "FireServer" and args[1] == "HatchEgg" then
        -- call original
        local result = oldFireServer(self, unpack(args))
        -- instantly sell after hatch
        task.spawn(function()
            remote:FireServer("SellAllFish")
        end)
        return result
    end
    return oldFireServer(self, ...)
end)
